<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daisyna.medicinetime.addmedicine.RegistrationActivity">

    <EditText
        android:id="@+id/regFirstName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="First Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/regLastName"
        app:layout_constraintTop_toBottomOf="@id/regFirstName"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Last Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/regAge"
        app:layout_constraintTop_toBottomOf="@id/regLastName"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Age"
        android:inputType="number"
        android:maxLength="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />


    <EditText
        android:id="@+id/regEmail"
        app:layout_constraintTop_toBottomOf="@id/regAge"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/regPassword"
        app:layout_constraintTop_toBottomOf="@+id/regEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btnRegister"
        app:layout_constraintTop_toBottomOf="@+id/regPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
